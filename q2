function merge2String() {
    let a1 = prompt();
    let a2 = prompt();
    let temp ="";
    let maxString = 0;
    if(a1.length > a2.length){
        maxString=a1.length
    } else {
        maxString=a2.length
    }
for(let i = 0; i < maxString ; i= i+1) {
     if(a1[i] === undefined){
         temp= temp + a2[i]
     } else if(a2[i] === undefined) {
         temp= temp + a1[i]
     } else {
         temp = temp + a1[i] + a2[i]
     }
  }
  console.log(temp)
}   
merge2String()
